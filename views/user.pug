extends layout

block content
    h3 #{user.name}
    each entry in user.entries
      .entryContainer
        p.date #{entry.date}
        p.entry #{entry.text}

    form.newEntry(action=`/user/${user.name}` method="POST")
      label(for="description") New entry
      textarea(name="description", cols="30", rows="10")
      input(type="submit" value="Add entry")